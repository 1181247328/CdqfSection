<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/service_bak">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/service_bak"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8">

        <TextView
            android:id="@+id/tv_daily_item_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_7"
            android:paddingBottom="@dimen/dp_7"
            android:text="2019-07-01"
            android:textColor="@color/tab_main_text_default"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/service_bak"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/service_bak"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_3"
                        android:text="下单次数"
                        android:textColor="@color/clock_one"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_daily_item_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/dp_3"
                        android:paddingBottom="@dimen/dp_15"
                        android:text="100"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_3"
                        android:text="服务次数"
                        android:textColor="@color/clock_one"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_daily_item_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/dp_3"
                        android:paddingBottom="@dimen/dp_15"
                        android:text="100"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_1"
                android:layout_weight="2"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_daily_item_proportion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:text="100.00/80.00"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/tv_daily_item_proportion"
                        android:background="@color/white"
                        android:gravity="bottom|center_horizontal"
                        android:paddingBottom="@dimen/dp_12"
                        android:text="店铺实收/成本(元)"
                        android:textColor="@color/clock_one"
                        android:textSize="@dimen/sp_13" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_daily_item_proportion"
                        android:background="@color/white"
                        android:gravity="top|center_horizontal"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_12">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:text="同比昨日"
                            android:textColor="@color/clock_one"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tv_daily_item_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:text="+40%"
                            android:textColor="@color/lossmanager_add"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_1"
                android:layout_weight="1"
                android:background="@color/service_bak"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_3"
                        android:text="服务金额(元)"
                        android:textColor="@color/clock_one"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_daily_item_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/dp_3"
                        android:paddingBottom="@dimen/dp_15"
                        android:text="100"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_3"
                        android:text="提成(元月)"
                        android:textColor="@color/clock_one"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_daily_item_commission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/dp_3"
                        android:paddingBottom="@dimen/dp_15"
                        android:text="100"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
