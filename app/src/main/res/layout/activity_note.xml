<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_main_text_icon"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/service_bak"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tab_main_text_icon">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center|center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="center_horizontal"
                        android:text="备注"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center|center_vertical"
                android:orientation="horizontal">

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_note_return"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/notice_click"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_8">

                <ImageView
                    android:id="@+id/iv_service_return"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/wash_return" />

            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_note_single"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/tab_main_text_icon"
                android:gravity="center"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:text="本单"
                android:textColor="@color/tab_main_text_default"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:id="@+id/tv_note_members"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/shop_one"
                android:gravity="center"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:text="本会员"
                android:textColor="@color/tab_main_text_default"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_note_context"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:gravity="top|left"
            android:hint="请输入100字以内的备注信息"
            android:lineSpacingExtra="@dimen/dp_3"
            android:maxLength="100"
            android:padding="@dimen/dp_8"
            android:textColor="@color/tab_main_text_default"
            android:textColorHint="@color/clock_one"
            android:textCursorDrawable="@drawable/nickname_cursor"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_note_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/tab_main_text_icon"
            android:gravity="center|center_vertical"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="提交"
            android:textColor="@color/tab_main_text_default"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>
</LinearLayout>