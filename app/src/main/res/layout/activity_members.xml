<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_main_text_icon"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_members_pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/service_bak">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/service_bak"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tab_main_text_icon">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center|center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_members_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:text="会员管理"
                            android:textColor="@color/tab_main_text_default"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center|center_vertical"
                    android:orientation="horizontal">

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_members_return"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/notice_click"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_8">

                    <ImageView
                        android:id="@+id/iv_service_return"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/wash_return" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_orders_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/service_bak"
                android:visibility="visible">

                <ProgressBar
                    android:id="@+id/pb_orders_bar"
                    style="@android:style/Widget.ProgressBar.Inverse"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_orders_abnormal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="暂无~"
                android:textColor="@color/house_eight"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nsv_members_sc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/service_bak"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/service_bak"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/service_bak"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_members_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical|left"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_17"
                                android:layout_height="@dimen/dp_16"
                                android:background="@android:color/transparent"
                                android:src="@mipmap/home_position" />

                            <TextView
                                android:id="@+id/tv_members_shop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:paddingLeft="@dimen/dp_5"
                                android:paddingRight="@dimen/dp_5"
                                android:text=""
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_13" />

                            <ImageView
                                android:layout_width="@dimen/dp_10"
                                android:layout_height="@dimen/dp_10"
                                android:background="@android:color/transparent"
                                android:src="@mipmap/shop_next"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/service_bak"
                        android:paddingLeft="@dimen/dp_10"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_members_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:padding="@dimen/dp_10"
                            android:text="确定"
                            android:textColor="@color/tab_main_text_default"
                            android:textSize="@dimen/sp_14" />

                        <com.gcssloop.widget.RCRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/tv_members_cancel"
                            android:background="@android:color/transparent"
                            app:clip_background="true"
                            app:round_corner="@dimen/dp_20">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/shop_one"
                                android:gravity="center_vertical|center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/dp_17"
                                    android:layout_height="@dimen/dp_16"
                                    android:background="@android:color/transparent"
                                    android:src="@mipmap/shop_serach" />

                                <EditText
                                    android:id="@+id/et_members_phone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_3"
                                    android:background="@android:color/transparent"
                                    android:gravity="center|center_vertical"
                                    android:hint="请输入手机号码"
                                    android:inputType="phone"
                                    android:paddingTop="@dimen/dp_7"
                                    android:paddingBottom="@dimen/dp_7"
                                    android:singleLine="true"
                                    android:textColor="@color/clock_one"
                                    android:textCursorDrawable="@color/clock_one"
                                    android:textSize="@dimen/sp_14" />

                            </LinearLayout>

                        </com.gcssloop.widget.RCRelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/service_bak"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10">

                        <LinearLayout
                            android:id="@+id/ll_members_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_30"
                                android:text="会员总数"
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tv_members_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:ellipsize="middle"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_3"
                                android:paddingBottom="@dimen/dp_30"
                                android:singleLine="true"
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_25"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_members_numbers"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_30"
                                android:text="下单会员"
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tv_members_numbers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:ellipsize="middle"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_3"
                                android:paddingBottom="@dimen/dp_30"
                                android:singleLine="true"
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_25"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/service_bak"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_30"
                                android:text="总下单金额"
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tv_members_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:ellipsize="middle"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_3"
                                android:paddingBottom="@dimen/dp_30"
                                android:singleLine="true"
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_25"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_30"
                                android:text="充值金额"
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_14" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/dp_8"
                                android:paddingBottom="@dimen/dp_17">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_members_with"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/transparent"
                                        android:ellipsize="middle"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:textColor="@color/tab_main_text_default"
                                        android:textSize="@dimen/sp_18"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_homemanager_left"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:text="已用"
                                        android:textColor="@color/loss_manager_number"
                                        android:textSize="@dimen/sp_12" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="@dimen/dp_0_5"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:background="@color/loss_manager_number" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_members_left"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/transparent"
                                        android:ellipsize="middle"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:textColor="@color/tab_main_text_default"
                                        android:textSize="@dimen/sp_18"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:text="剩余"
                                        android:textColor="@color/loss_manager_number"
                                        android:textSize="@dimen/sp_12" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
