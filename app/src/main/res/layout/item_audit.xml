<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <com.gcssloop.widget.RCRelativeLayout
                android:id="@+id/rcrl_audit_item_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:clip_background="true"
                app:round_corner="@dimen/dp_5">

                <ImageView
                    android:id="@+id/iv_audit_item_image"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_85"
                    android:scaleType="centerCrop" />

            </com.gcssloop.widget.RCRelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/rcrl_audit_item_image"
                android:layout_toRightOf="@id/rcrl_audit_item_image"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_8">

                <TextView
                    android:id="@+id/tv_audit_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/audit_text"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="right|center_vertical">

                    <TextView
                        android:id="@+id/tv_audit_item_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dp_30"
                        android:paddingRight="@dimen/dp_30"
                        android:textColor="@color/audit_text"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_audit_item_figure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/rcrl_audit_item_image"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_8"
                android:textColor="@color/audit_text"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/rcrl_audit_item_image"
                android:layout_toRightOf="@id/rcrl_audit_item_image"
                android:background="@color/white"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_8">

                <TextView
                    android:id="@+id/tv_audit_item_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/audit_text"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <com.gcssloop.widget.RCRelativeLayout
                        android:id="@+id/rcrl_audit_item_refused"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_2"
                        android:background="@android:color/transparent"
                        app:clip_background="true"
                        app:stroke_color="#f75c3e"
                        app:stroke_width="@dimen/dp_1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingBottom="@dimen/dp_5"
                            android:text="拒绝"
                            android:textColor="#f75c3e"
                            android:textSize="@dimen/sp_14" />

                    </com.gcssloop.widget.RCRelativeLayout>

                    <com.gcssloop.widget.RCRelativeLayout
                        android:id="@+id/rcrl_audit_item_through"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:background="@android:color/transparent"
                        app:clip_background="true"
                        app:stroke_color="#f75c3e"
                        app:stroke_width="@dimen/dp_1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingBottom="@dimen/dp_5"
                            android:text="通过"
                            android:textColor="#f75c3e"
                            android:textSize="@dimen/sp_14" />

                    </com.gcssloop.widget.RCRelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
