<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <com.gcssloop.widget.RCRelativeLayout
                android:id="@+id/rcrl_audit_item_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:clip_background="true"
                app:round_corner="5dp">

                <ImageView
                    android:id="@+id/iv_audit_item_image"
                    android:layout_width="90dp"
                    android:layout_height="85dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/test5" />

            </com.gcssloop.widget.RCRelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/rcrl_audit_item_image"
                android:layout_toRightOf="@id/rcrl_audit_item_image"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/tv_audit_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="洗车毛巾"
                    android:textColor="@color/audit_text"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="right|center_vertical">

                    <TextView
                        android:id="@+id/tv_audit_item_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="20条"
                        android:textColor="@color/audit_text"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_audit_item_figure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/rcrl_audit_item_image"
                android:background="@color/white"
                android:paddingLeft="8dp"
                android:text="申请人：老王"
                android:textColor="@color/audit_text"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/rcrl_audit_item_image"
                android:layout_toRightOf="@id/rcrl_audit_item_image"
                android:background="@color/white"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/tv_audit_item_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="洗车毛巾"
                    android:textColor="@color/audit_text"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="right|center_vertical">

                    <com.gcssloop.widget.RCRelativeLayout
                        android:id="@+id/rcrl_audit_item_through"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/component_click"
                        app:clip_background="true"
                        app:stroke_color="#f75c3e"
                        app:stroke_width="1dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingLeft="20dp"
                            android:paddingTop="5dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:text="审核通过"
                            android:textColor="#f75c3e"
                            android:textSize="14sp" />

                    </com.gcssloop.widget.RCRelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
