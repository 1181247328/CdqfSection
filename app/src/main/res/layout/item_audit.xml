<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shop_item"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/service_bak" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_audit_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_14"
            android:text="工号：W10021"
            android:textColor="@color/tab_main_text_default"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_audit_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="right|center_vertical"
            android:paddingTop="@dimen/dp_14"
            android:paddingRight="@dimen/dp_10"
            android:text="报销金额:￥100.00"
            android:textColor="@color/clock_one"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_audit_item_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:text="报销时间：2019-07-12 10:40"
            android:textColor="@color/clock_one"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_audit_item_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="right|center_vertical"
            android:paddingTop="@dimen/dp_14"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_14"
            android:text="待审批"
            android:textColor="@color/clock_one"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>

</LinearLayout>
