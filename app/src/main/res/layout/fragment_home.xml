<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tab_main_text_icon"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="首页"
                android:textColor="@color/white"
                android:textSize="38px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="22dp"
                android:paddingRight="22dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/home_notice" />

                <TextView
                    android:id="@+id/tv_home_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="王五"
                    android:textColor="@color/tab_main_text_default"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv_home_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="您好: 今天是2019年4月16日，您加入脱狗车宝团队第二天!"
                    android:textColor="@color/tab_main_text_default"
                    android:textSize="20px" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f3f3f3" />

            <com.cdqf.cart_view.MyGridView
                android:id="@+id/mgv_home_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:horizontalSpacing="40dp"
                android:numColumns="2"
                android:paddingLeft="78dp"
                android:paddingTop="50dp"
                android:paddingRight="78dp"
                android:paddingBottom="10dp"
                android:scrollbars="none"
                android:verticalSpacing="75dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
