<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_main_text_icon"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/service_bak"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tab_main_text_icon">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center|center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_members_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="center_horizontal"
                        android:text="加订单"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center|center_vertical"
                android:orientation="horizontal">

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_order_return"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/notice_click"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_8">

                <ImageView
                    android:id="@+id/iv_service_return"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/wash_return" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/service_bak">

            <TextView
                android:id="@+id/tv_order_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@color/tab_main_text_icon"
                android:gravity="center|center_vertical"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:text="提交订单"
                android:textColor="@color/tab_main_text_default"
                android:textSize="@dimen/sp_14" />

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/tv_order_submit"
                android:background="@color/service_bak">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/service_bak"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_12"
                            android:text="手机号码"
                            android:textColor="@color/tab_main_text_default"
                            android:textSize="@dimen/sp_14" />

                        <EditText
                            android:id="@+id/tv_order_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="right|center_vertical"
                            android:hint="请输入手机号码"
                            android:inputType="phone"
                            android:lines="1"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_12"
                            android:textColor="@color/login_text"
                            android:textColorHint="@color/clock_one"
                            android:textCursorDrawable="@drawable/nickname_cursor"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@color/service_bak" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_12"
                            android:text="车牌号码"
                            android:textColor="@color/tab_main_text_default"
                            android:textSize="@dimen/sp_14" />

                        <EditText
                            android:id="@+id/tv_order_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="right|center_vertical"
                            android:hint="请输入车牌号码"
                            android:lines="1"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_12"
                            android:textColor="@color/login_text"
                            android:textColorHint="@color/clock_one"
                            android:textCursorDrawable="@drawable/nickname_cursor"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@color/service_bak" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_12"
                            android:text="车辆车型"
                            android:textColor="@color/tab_main_text_default"
                            android:textSize="@dimen/sp_14" />

                        <LinearLayout
                            android:id="@+id/ll_order_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center_vertical|right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_order_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="right|center_vertical"
                                android:hint="请选择车辆类型"
                                android:lines="1"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_12"
                                android:paddingRight="@dimen/dp_3"
                                android:paddingBottom="@dimen/dp_12"
                                android:textColor="@color/login_text"
                                android:textColorHint="@color/clock_one"
                                android:textCursorDrawable="@drawable/nickname_cursor"
                                android:textSize="@dimen/sp_14" />

                            <ImageView
                                android:layout_width="@dimen/dp_11"
                                android:layout_height="@dimen/dp_10"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_10"
                                android:background="@android:color/transparent"
                                android:src="@mipmap/under" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@color/service_bak" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_12"
                            android:text="车辆颜色"
                            android:textColor="@color/tab_main_text_default"
                            android:textSize="@dimen/sp_14" />

                        <LinearLayout
                            android:id="@+id/ll_order_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center_vertical|right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_order_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="right|center_vertical"
                                android:hint="请选择车辆颜色"
                                android:lines="1"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_12"
                                android:paddingRight="@dimen/dp_3"
                                android:paddingBottom="@dimen/dp_12"
                                android:textColor="@color/login_text"
                                android:textColorHint="@color/clock_one"
                                android:textCursorDrawable="@drawable/nickname_cursor"
                                android:textSize="@dimen/sp_14" />

                            <ImageView
                                android:layout_width="@dimen/dp_11"
                                android:layout_height="@dimen/dp_10"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_10"
                                android:background="@android:color/transparent"
                                android:src="@mipmap/under" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@color/service_bak" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_12"
                            android:text="服务项目"
                            android:textColor="@color/tab_main_text_default"
                            android:textSize="@dimen/sp_14" />

                        <LinearLayout
                            android:id="@+id/ll_order_service"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center_vertical|right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_order_service"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="right|center_vertical"
                                android:hint="请选择服务项目"
                                android:lines="1"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_12"
                                android:paddingRight="@dimen/dp_3"
                                android:paddingBottom="@dimen/dp_12"
                                android:textColor="@color/login_text"
                                android:textColorHint="@color/clock_one"
                                android:textCursorDrawable="@drawable/nickname_cursor"
                                android:textSize="@dimen/sp_14" />

                            <ImageView
                                android:layout_width="@dimen/dp_11"
                                android:layout_height="@dimen/dp_10"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_10"
                                android:background="@android:color/transparent"
                                android:src="@mipmap/under" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@color/service_bak" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_12"
                            android:text="其它服务"
                            android:textColor="@color/tab_main_text_default"
                            android:textSize="@dimen/sp_14" />

                        <LinearLayout
                            android:id="@+id/ll_order_other"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center_vertical|right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_order_other"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="right|center_vertical"
                                android:hint="请选择其它服务项目"
                                android:lines="1"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_12"
                                android:paddingRight="@dimen/dp_3"
                                android:paddingBottom="@dimen/dp_12"
                                android:textColor="@color/login_text"
                                android:textColorHint="@color/clock_one"
                                android:textCursorDrawable="@drawable/nickname_cursor"
                                android:textSize="@dimen/sp_14" />

                            <ImageView
                                android:layout_width="@dimen/dp_11"
                                android:layout_height="@dimen/dp_10"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_10"
                                android:background="@android:color/transparent"
                                android:src="@mipmap/under" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@color/service_bak" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="备注"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_10">

                        <EditText
                            android:id="@+id/tv_datils_note"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_100"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/service_bak"
                            android:gravity="top|center_vertical|left"
                            android:hint="请输入50字以内的备注信息"
                            android:lineSpacingExtra="@dimen/dp_3"
                            android:padding="@dimen/dp_5"
                            android:textColor="@color/tab_main_text_default"
                            android:textColorHint="@color/clock_one"
                            android:textCursorDrawable="@drawable/nickname_cursor"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="付款方式"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_13" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_vertical|left"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_12"
                                android:paddingBottom="@dimen/dp_12">

                                <ImageView
                                    android:layout_width="@dimen/dp_23"
                                    android:layout_height="@dimen/dp_22"
                                    android:background="@android:color/transparent"
                                    android:src="@mipmap/pay_one" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:gravity="left|center_vertical"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:text="余额付款"
                                    android:textColor="@color/tab_main_text_default"
                                    android:textSize="@dimen/sp_14" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:background="@color/service_bak" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_12"
                                android:paddingBottom="@dimen/dp_12">

                                <ImageView
                                    android:layout_width="@dimen/dp_23"
                                    android:layout_height="@dimen/dp_22"
                                    android:background="@android:color/transparent"
                                    android:src="@mipmap/pay_two" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:gravity="left|center_vertical"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:text="现金支付"
                                    android:textColor="@color/tab_main_text_default"
                                    android:textSize="@dimen/sp_14" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:background="@color/service_bak" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_12"
                                android:paddingBottom="@dimen/dp_12">

                                <ImageView
                                    android:layout_width="@dimen/dp_23"
                                    android:layout_height="@dimen/dp_22"
                                    android:background="@android:color/transparent"
                                    android:src="@mipmap/pay_three" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:gravity="left|center_vertical"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:text="农商"
                                    android:textColor="@color/tab_main_text_default"
                                    android:textSize="@dimen/sp_14" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:background="@color/service_bak" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:orientation="vertical">

                            <RadioGroup
                                android:id="@+id/rg_order_pay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="right"
                                android:orientation="vertical">

                                <RadioButton
                                    android:id="@+id/rb_order_payone"
                                    android:layout_width="@dimen/dp_22"
                                    android:layout_height="@dimen/dp_22"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:layout_marginBottom="@dimen/dp_12"
                                    android:background="@drawable/checkbox_order"
                                    android:button="@null"
                                    android:checked="false" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_1"
                                    android:background="@color/service_bak" />

                                <RadioButton
                                    android:id="@+id/rb_order_paytwo"
                                    android:layout_width="@dimen/dp_22"
                                    android:layout_height="@dimen/dp_22"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:layout_marginBottom="@dimen/dp_12"
                                    android:background="@drawable/checkbox_order"
                                    android:button="@null" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_1"
                                    android:background="@color/service_bak" />

                                <RadioButton
                                    android:id="@+id/rb_order_paythree"
                                    android:layout_width="@dimen/dp_22"
                                    android:layout_height="@dimen/dp_22"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:layout_marginBottom="@dimen/dp_12"
                                    android:background="@drawable/checkbox_order"
                                    android:button="@null" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_1"
                                    android:background="@color/service_bak" />


                            </RadioGroup>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>