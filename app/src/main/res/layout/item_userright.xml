<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <CheckBox
            android:id="@+id/cb_users_item_checkbox"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/checkbox_style"
            android:button="@null"
            android:checked="false" />

        <LinearLayout
            android:id="@+id/ll_user_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_8"
                android:text="+"
                android:textColor="@color/news_loss"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_user_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_2_5"
                android:text="30"
                android:textColor="@color/news_loss"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ll_user_item_price"
            android:layout_toRightOf="@id/cb_users_item_checkbox"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_users_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:ellipsize="end"
                android:lines="1"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_6"
                android:singleLine="true"
                android:text="机油"
                android:textColor="@color/tab_main_text_default"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_users_item_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:ellipsize="end"
                android:lines="1"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_6"
                android:singleLine="true"
                android:text="库存:   12"
                android:textColor="@color/name_text"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>

