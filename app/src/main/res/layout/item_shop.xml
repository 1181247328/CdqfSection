<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <com.gcssloop.widget.RCRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:clip_background="true"
        app:round_corner="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/tv_shop_item_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingLeft="5dp"
                android:paddingTop="12dp"
                android:paddingRight="5dp"
                android:paddingBottom="12dp"
                android:text="订单: 123455666"
                android:textColor="@color/tab_main_text_default"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lossmanager_stock" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="12dp"
                android:paddingRight="5dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="车牌号:"
                    android:textColor="@color/tab_main_text_default"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_shop_item_plate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingLeft="10dp"
                    android:text="川A 7755"
                    android:textColor="@color/loss_receive"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <com.gcssloop.widget.RCRelativeLayout
                        android:id="@+id/rcrl_shop_item_claim"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:background="@color/loss_receive"
                        app:clip_background="true"
                        app:round_corner="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_shop_item_claim"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:gravity="center|right"
                                android:paddingTop="7dp"
                                android:paddingBottom="7dp"
                                android:text="服务"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_shop_item_number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@id/tv_shop_item_claim"
                                android:layout_toRightOf="@id/tv_shop_item_claim"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:gravity="center|left"
                                android:paddingLeft="2dp"
                                android:paddingTop="7dp"
                                android:paddingBottom="7dp"
                                android:text="(0人)"
                                android:textColor="@color/white"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </com.gcssloop.widget.RCRelativeLayout>

                    <com.gcssloop.widget.RCRelativeLayout
                        android:id="@+id/rcrl_shop_item_washed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:background="@color/loss_receive"
                        app:clip_background="true"
                        app:round_corner="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:text="完成"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </com.gcssloop.widget.RCRelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="8dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/tv_shop_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="丰田-白色-小轿车"
                    android:textColor="@color/tab_main_text_default"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/tv_shop_item_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="时间: 2019/04/17"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </com.gcssloop.widget.RCRelativeLayout>

</LinearLayout>
