<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/service_bak"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fill_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="报销明细(1)"
            android:textColor="@color/clock_one"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="right|center">

            <TextView
                android:id="@+id/tv_fill_item_cencel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/datils_click"
                android:gravity="right|center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="取消"
                android:textColor="@color/tab_main_text_icon"
                android:textColorHint="@color/clock_one"
                android:textCursorDrawable="@drawable/nickname_cursor"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:text="所属门店"
            android:textColor="@color/tab_main_text_default"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/ll_fill_item_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="right|center"
            android:paddingRight="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_fill_item_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="right|center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_12"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_12"
                android:textColor="@color/tab_main_text_default"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/my_right" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/service_bak" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:text="报销金额(元)"
            android:textColor="@color/tab_main_text_default"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="right|center">


            <EditText
                android:id="@+id/et_fill_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="right|center"
                android:hint="请输入金额"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_12"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_12"
                android:textColor="@color/tab_main_text_default"
                android:textColorHint="@color/clock_one"
                android:textCursorDrawable="@drawable/nickname_cursor"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/service_bak" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:text="报销类别"
            android:textColor="@color/tab_main_text_default"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/ll_fill_item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="right|center"
            android:paddingRight="@dimen/dp_10">


            <TextView
                android:id="@+id/tv_fill_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="right|center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_12"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_12"
                android:textColor="@color/tab_main_text_default"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/my_right" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/service_bak" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:text="费用描述"
            android:textColor="@color/tab_main_text_default"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/et_fill_item_context"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:background="@android:color/transparent"
            android:gravity="left|top"
            android:hint="请输入费用明细描述"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_12"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_12"
            android:textColor="@color/tab_main_text_default"
            android:textColorHint="@color/clock_one"
            android:textCursorDrawable="@drawable/nickname_cursor"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/service_bak" />

</LinearLayout>
