<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_main_text_icon"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_datils_pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/service_bak">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tab_main_text_icon">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center|center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10">

                        <TextView
                            android:id="@+id/tv_datils_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:text="W10021"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center|center_vertical"
                    android:orientation="horizontal">

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_datils_return"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/notice_click"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_8">

                    <ImageView
                        android:id="@+id/iv_service_return"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/pldetails_return" />

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/service_bak">

                <LinearLayout
                    android:id="@+id/ll_datis_operation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15">

                    <com.gcssloop.widget.RCRelativeLayout
                        android:id="@+id/rcrl_datils_cencal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginRight="@dimen/dp_25"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        app:clip_background="true"
                        app:round_corner="@dimen/dp_20">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/tab_main_text_icon"
                            android:gravity="center"
                            android:paddingTop="@dimen/dp_8"
                            android:paddingBottom="@dimen/dp_8"
                            android:text="拒绝"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14" />

                    </com.gcssloop.widget.RCRelativeLayout>

                    <com.gcssloop.widget.RCRelativeLayout
                        android:id="@+id/rcrl_datils_agreed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginRight="@dimen/dp_25"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        app:clip_background="true"
                        app:round_corner="@dimen/dp_20">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/tab_main_text_icon"
                            android:gravity="center"
                            android:paddingTop="@dimen/dp_8"
                            android:paddingBottom="@dimen/dp_8"
                            android:text="同意"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14" />

                    </com.gcssloop.widget.RCRelativeLayout>

                </LinearLayout>

                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/sv_datils_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/ll_datis_operation"
                    android:background="@color/service_bak"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/service_bak"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_20"
                        android:scrollbars="none">

                        <TextView
                            android:id="@+id/tv_datils_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_8"
                            android:paddingTop="@dimen/dp_8"
                            android:paddingBottom="@dimen/dp_8"
                            android:text="2019-06-08 12:00"
                            android:textColor="@color/tab_main_text_default"
                            android:textSize="@dimen/sp_12" />

                        <com.cdqf.cart_view.ListViewForScrollView
                            android:id="@+id/lvfsv_datils_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:divider="@color/service_bak"
                            android:dividerHeight="@dimen/dp_5" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_1"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dp_8"
                                android:paddingTop="@dimen/dp_8"
                                android:paddingBottom="@dimen/dp_8"
                                android:text="报销凭证"
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tv_datils_credentials"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_12"
                                android:paddingBottom="@dimen/dp_12"
                                android:text="订单无报销凭证~"
                                android:textColor="@color/clock_one"
                                android:textSize="@dimen/sp_11" />

                            <com.cdqf.cart_view.MyGridView
                                android:id="@+id/mgv_datals_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_marginRight="@dimen/dp_8"
                                android:background="@color/white"
                                android:backgroundTint="@color/white"
                                android:horizontalSpacing="@dimen/dp_5"
                                android:numColumns="4"
                                android:paddingBottom="@dimen/dp_8"
                                android:verticalSpacing="@dimen/dp_5"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/dp_8"
                            android:paddingBottom="@dimen/dp_8">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dp_8"
                                android:text="总报销金额(元):"
                                android:textColor="@color/clock_one"
                                android:textSize="@dimen/sp_12"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_datils_total"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dp_8"
                                android:text="100.00"
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_12"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_datils_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_10"
                                android:paddingBottom="@dimen/dp_10"
                                android:text="状态"
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_14" />

                            <LinearLayout
                                android:id="@+id/ll_fill_item_shop"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="right|center"
                                android:paddingRight="@dimen/dp_10">

                                <TextView
                                    android:id="@+id/tv_datils_state"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:gravity="right|center"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:paddingTop="@dimen/dp_10"
                                    android:paddingBottom="@dimen/dp_10"
                                    android:text="等待审批"
                                    android:textColor="@color/clock_one"
                                    android:textSize="@dimen/sp_14" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v4.widget.NestedScrollView>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>