<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_main_text_icon"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_home_pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tab_main_text_icon"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="首页"
                    android:textColor="@color/tab_main_text_default"
                    android:textSize="@dimen/sp_16" />

                <RelativeLayout
                    android:id="@+id/rl_orders_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/service_bak"
                    android:visibility="visible">

                    <ProgressBar
                        android:id="@+id/pb_orders_bar"
                        style="@android:style/Widget.ProgressBar.Inverse"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_orders_abnormal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="异常,请刷新~"
                    android:textColor="@color/house_eight"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone" />

                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/nsv_home_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_homemanager_shop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical|left"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10"
                                android:paddingBottom="@dimen/dp_10">

                                <ImageView
                                    android:layout_width="@dimen/dp_17"
                                    android:layout_height="@dimen/dp_16"
                                    android:background="@android:color/transparent"
                                    android:src="@mipmap/home_position" />

                                <TextView
                                    android:id="@+id/tv_homemanager_shop"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:paddingLeft="@dimen/dp_5"
                                    android:paddingRight="@dimen/dp_5"
                                    android:text=""
                                    android:textColor="@color/tab_main_text_default"
                                    android:textSize="@dimen/sp_12" />

                                <ImageView
                                    android:layout_width="@dimen/dp_10"
                                    android:layout_height="@dimen/dp_10"
                                    android:background="@android:color/transparent"
                                    android:src="@mipmap/hone_next" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical|right"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:id="@+id/tv_homemanager_scan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/datils_click"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:paddingTop="@dimen/dp_10"
                                    android:paddingRight="@dimen/dp_10"
                                    android:paddingBottom="@dimen/dp_10">

                                    <ImageView
                                        android:layout_width="@dimen/dp_20"
                                        android:layout_height="@dimen/dp_20"
                                        android:src="@mipmap/home_scan" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/line" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white">

                                <com.cdqf.cart_view.LineGridView
                                    android:id="@+id/mgv_home_list"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:numColumns="4"
                                    android:paddingBottom="@dimen/dp_5"
                                    android:scrollbars="none" />

                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/rcrl_home_situation"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white">

                                <com.gcssloop.widget.RCRelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/dp_15"
                                    android:layout_marginRight="@dimen/dp_15"
                                    android:layout_marginBottom="@dimen/dp_20"
                                    android:background="@color/loss_receive"
                                    app:clip_background="true"
                                    app:round_corner="@dimen/dp_5">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/transparent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@android:color/transparent"
                                            android:paddingLeft="@dimen/dp_20"
                                            android:paddingTop="@dimen/dp_8"
                                            android:text="店铺情况"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/sp_16" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@android:color/transparent"
                                            android:orientation="horizontal"
                                            android:paddingTop="@dimen/dp_10">

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:background="@android:color/transparent"
                                                android:gravity="center"
                                                android:text="今日下单"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/sp_14" />

                                            <TextView
                                                android:layout_width="@dimen/dp_0_1"
                                                android:layout_height="wrap_content"
                                                android:background="@color/login_text" />

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:background="@android:color/transparent"
                                                android:gravity="center"
                                                android:text="今日营业额"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/sp_14" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@android:color/transparent"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/tv_homemanager_order"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:background="@android:color/transparent"
                                                android:gravity="center"
                                                android:paddingTop="@dimen/dp_5"
                                                android:paddingBottom="@dimen/dp_10"
                                                android:text="15次"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/sp_14" />

                                            <TextView
                                                android:layout_width="@dimen/dp_0_1"
                                                android:layout_height="match_parent"
                                                android:background="@color/login_text" />

                                            <TextView
                                                android:id="@+id/tv_homemanager_ordermoney"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:background="@android:color/transparent"
                                                android:gravity="center"
                                                android:paddingTop="@dimen/dp_5"
                                                android:paddingBottom="@dimen/dp_10"
                                                android:text="200元"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/sp_14" />

                                        </LinearLayout>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/dp_0_1"
                                            android:layout_marginLeft="@dimen/dp_15"
                                            android:layout_marginRight="@dimen/dp_15"
                                            android:background="@color/login_text" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@android:color/transparent"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:background="@android:color/transparent"
                                                android:gravity="center"
                                                android:paddingTop="@dimen/dp_10"
                                                android:text="今日服务"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/sp_14" />

                                            <TextView
                                                android:layout_width="@dimen/dp_0_1"
                                                android:layout_height="match_parent"
                                                android:background="@color/login_text" />

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:background="@android:color/transparent"
                                                android:gravity="center"
                                                android:paddingTop="@dimen/dp_10"
                                                android:text="当日营业"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/sp_14" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@android:color/transparent"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/tv_homemanager_number"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:background="@android:color/transparent"
                                                android:gravity="center"
                                                android:paddingTop="@dimen/dp_5"
                                                android:paddingBottom="@dimen/dp_12"
                                                android:text="100辆"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/sp_14" />

                                            <TextView
                                                android:layout_width="@dimen/dp_0_1"
                                                android:layout_height="match_parent"
                                                android:layout_marginBottom="@dimen/dp_12"
                                                android:background="@color/login_text" />

                                            <TextView
                                                android:id="@+id/tv_homemanager_money"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:background="@android:color/transparent"
                                                android:gravity="center"
                                                android:paddingTop="@dimen/dp_5"
                                                android:paddingBottom="@dimen/dp_12"
                                                android:text="150"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/sp_14" />

                                        </LinearLayout>

                                    </LinearLayout>


                                </com.gcssloop.widget.RCRelativeLayout>
                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
