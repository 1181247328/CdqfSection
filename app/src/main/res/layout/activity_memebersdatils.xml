<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/service_bak"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/service_bak"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_30">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tab_main_text_icon">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_members_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:gravity="center|center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10">

                            <TextView
                                android:id="@+id/tv_datils_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center_horizontal"
                                android:text=""
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_14" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_datils_return"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/notice_click"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_8">

                        <ImageView
                            android:id="@+id/iv_service_return"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_15"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/wash_return" />

                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_15"
                    android:text="电话"
                    android:textColor="@color/tab_main_text_default"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_details_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="13551021774"
                    android:textColor="@color/tab_main_text_default"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="车辆"
                    android:textColor="@color/tab_main_text_default"
                    android:textSize="@dimen/sp_12" />

                <RelativeLayout
                    android:id="@+id/rl_detils_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingRight="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/iv_details_next"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_11"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/under" />

                    <TextView
                        android:id="@+id/tv_detils_next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/iv_details_next"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="车辆"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="状态"
                    android:textColor="@color/tab_main_text_default"
                    android:textSize="@dimen/sp_12" />

                <com.gcssloop.widget.RCRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:clip_background="true"
                    app:round_corner="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/dp_5">

                            <com.gcssloop.widget.RCRelativeLayout
                                android:id="@+id/rcrl_details_way"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_2"
                                android:background="@android:color/transparent"
                                app:clip_background="true">

                                <LinearLayout
                                    android:id="@+id/ll_details_way"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/tab_main_text_icon"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/dp_15"
                                    android:paddingTop="@dimen/dp_5"
                                    android:paddingRight="@dimen/dp_15"
                                    android:paddingBottom="@dimen/dp_5">

                                    <TextView
                                        android:id="@+id/tv_details_way"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/transparent"
                                        android:gravity="center|right"
                                        android:text="平台"
                                        android:textColor="@color/tab_main_text_default"
                                        android:textSize="@dimen/sp_12" />

                                </LinearLayout>
                            </com.gcssloop.widget.RCRelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="right"
                                android:orientation="horizontal"
                                android:paddingRight="@dimen/dp_8">

                                <TextView
                                    android:id="@+id/tv_details_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:text="￥15.00"
                                    android:textColor="@color/tab_main_text_default"
                                    android:textSize="@dimen/sp_14"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/service_bak" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5">

                            <LinearLayout
                                android:id="@+id/ll_shop_item_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@android:color/transparent"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/dp_8">

                                <com.gcssloop.widget.RCRelativeLayout
                                    android:id="@+id/rcrl_details_claim"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:background="@android:color/transparent"
                                    app:clip_background="true">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@color/tab_main_text_icon"
                                        android:orientation="horizontal"
                                        android:paddingLeft="@dimen/dp_25"
                                        android:paddingTop="@dimen/dp_8"
                                        android:paddingRight="@dimen/dp_25"
                                        android:paddingBottom="@dimen/dp_8">

                                        <TextView
                                            android:id="@+id/tv_details_claim"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@android:color/transparent"
                                            android:gravity="center|right"
                                            android:text="服务"
                                            android:textColor="@color/tab_main_text_default"
                                            android:textSize="@dimen/sp_12" />

                                    </LinearLayout>
                                </com.gcssloop.widget.RCRelativeLayout>

                                <com.gcssloop.widget.RCRelativeLayout
                                    android:id="@+id/rcrl_details_addorder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/dp_2"
                                    android:background="@android:color/transparent"
                                    app:clip_background="true">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@color/tab_main_text_icon"
                                        android:orientation="horizontal"
                                        android:paddingLeft="@dimen/dp_20"
                                        android:paddingTop="@dimen/dp_8"
                                        android:paddingRight="@dimen/dp_20"
                                        android:paddingBottom="@dimen/dp_8">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@android:color/transparent"
                                            android:gravity="center|right"
                                            android:text="加订单"
                                            android:textColor="@color/tab_main_text_default"
                                            android:textSize="@dimen/sp_12" />

                                    </LinearLayout>
                                </com.gcssloop.widget.RCRelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/ll_shop_item_state"
                                android:background="@android:color/transparent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:orientation="horizontal"
                                    android:paddingTop="@dimen/dp_10"
                                    android:paddingBottom="@dimen/dp_4">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/transparent"
                                        android:text="车牌号:"
                                        android:textColor="@color/tab_main_text_default"
                                        android:textSize="@dimen/sp_12" />

                                    <TextView
                                        android:id="@+id/tv_details_plate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/transparent"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:text="川A 7755"
                                        android:textColor="@color/tab_main_text_default"
                                        android:textSize="@dimen/sp_12" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_shop_item_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:orientation="horizontal"
                                    android:paddingTop="@dimen/dp_4"
                                    android:paddingBottom="@dimen/dp_10">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/transparent"
                                        android:text="车    型:"
                                        android:textColor="@color/tab_main_text_default"
                                        android:textSize="@dimen/sp_12" />

                                    <TextView
                                        android:id="@+id/tv_details_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/transparent"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:text="红色-SUV"
                                        android:textColor="@color/tab_main_text_default"
                                        android:textSize="@dimen/sp_12" />

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/service_bak" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_8"
                            android:paddingRight="@dimen/dp_5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:text="下单时间:"
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_12" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="right"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/dp_10">

                                <TextView
                                    android:id="@+id/tv_details_timer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:text="时间: 2019/04/17"
                                    android:textColor="@color/tab_main_text_default"
                                    android:textSize="@dimen/sp_12" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.gcssloop.widget.RCRelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="备注"
                    android:textColor="@color/tab_main_text_default"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_datils_note"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_100"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/service_bak"
                        android:gravity="top|center_vertical|left"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:padding="@dimen/dp_5"
                        android:textColor="@color/tab_main_text_default"
                        android:textColorHint="@color/clock_one"
                        android:textCursorDrawable="@drawable/nickname_cursor"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_12"
                            android:text="充值金额"
                            android:textColor="@color/tab_main_text_default"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/tv_details_monery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_12"
                            android:text="￥2000.00"
                            android:textColor="@color/tab_main_text_default"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/service_bak" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_details_with"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:paddingBottom="@dimen/dp_4"
                                android:text="￥1000.00"
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="已用"
                                android:textColor="@color/loss_manager_number"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_details_remaining"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:paddingBottom="@dimen/dp_4"
                                android:text="￥1000.00"
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="已用"
                                android:textColor="@color/loss_manager_number"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_12"
                        android:text="下单次数"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_details_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical|right"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_12"
                        android:text="100次"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
