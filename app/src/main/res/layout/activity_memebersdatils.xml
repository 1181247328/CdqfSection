<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_main_text_icon"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_datils_pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/service_bak"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tab_main_text_icon">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center|center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_members_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10">

                        <TextView
                            android:id="@+id/tv_datils_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:text=""
                            android:textColor="@color/tab_main_text_default"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center|center_vertical"
                    android:orientation="horizontal">

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_datils_return"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/notice_click"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_8">

                    <ImageView
                        android:id="@+id/iv_service_return"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/wash_return" />

                </RelativeLayout>
            </RelativeLayout>

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/sv_datils_pull"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/service_bak"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/service_bak"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_310">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_15"
                        android:text="电话"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_details_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="13551021774"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="车辆"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_14" />

                    <RelativeLayout
                        android:id="@+id/rl_detils_next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingRight="@dimen/dp_10">

                        <ImageView
                            android:id="@+id/iv_details_next"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_11"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/under" />

                        <TextView
                            android:id="@+id/tv_detils_next"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/iv_details_next"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="车辆"
                            android:textColor="@color/tab_main_text_default"
                            android:textSize="@dimen/sp_14" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="状态"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_14" />

                    <com.gcssloop.widget.RCRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:clip_background="true"
                        app:round_corner="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/dp_10">

                            <TextView
                                android:id="@+id/tv_datils_order"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_50"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="暂无订单,请点击前往添加"
                                android:textColor="@color/clock_one"
                                android:textSize="@dimen/sp_12" />

                            <com.cdqf.cart_view.ListViewForScrollView
                                android:id="@+id/lvfsv_datails_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:divider="@null"
                                android:scrollbars="none"
                                android:visibility="gone" />

                        </LinearLayout>

                    </com.gcssloop.widget.RCRelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="备注"
                        android:textColor="@color/tab_main_text_default"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_10">

                        <TextView
                            android:id="@+id/tv_datils_note"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_100"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/service_bak"
                            android:gravity="top|center_vertical|left"
                            android:lineSpacingExtra="@dimen/dp_3"
                            android:padding="@dimen/dp_5"
                            android:textColor="@color/tab_main_text_default"
                            android:textColorHint="@color/clock_one"
                            android:textCursorDrawable="@drawable/nickname_cursor"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_12"
                                android:paddingBottom="@dimen/dp_12"
                                android:text="充值金额"
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tv_details_monery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical|right"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_12"
                                android:paddingRight="@dimen/dp_10"
                                android:paddingBottom="@dimen/dp_12"
                                android:text="￥2000.00"
                                android:textColor="@color/tab_main_text_default"
                                android:textSize="@dimen/sp_14" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/service_bak" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_details_with"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:paddingBottom="@dimen/dp_4"
                                    android:text="￥1000.00"
                                    android:textColor="@color/tab_main_text_default"
                                    android:textSize="@dimen/sp_14" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:text="已用"
                                    android:textColor="@color/loss_manager_number"
                                    android:textSize="@dimen/sp_13" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_details_remaining"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:paddingBottom="@dimen/dp_4"
                                    android:text="￥1000.00"
                                    android:textColor="@color/tab_main_text_default"
                                    android:textSize="@dimen/sp_14" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:text="已用"
                                    android:textColor="@color/loss_manager_number"
                                    android:textSize="@dimen/sp_13" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_12"
                            android:text="下单次数"
                            android:textColor="@color/tab_main_text_default"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_details_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_12"
                            android:text="100次"
                            android:textColor="@color/tab_main_text_default"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
