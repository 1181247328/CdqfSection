<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15">

        <CheckBox
            android:id="@+id/cb_user_item_checkbox"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/checkbox_style"
            android:button="@null"
            android:checked="false" />


        <TextView
            android:id="@+id/tv_user_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_8"
            android:text="￥15.00"
            android:textColor="@color/lossmanager_add"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_user_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_user_item_price"
            android:layout_toRightOf="@id/cb_user_item_checkbox"
            android:background="@color/white"
            android:ellipsize="end"
            android:lines="1"
            android:paddingLeft="@dimen/dp_10"
            android:singleLine="true"
            android:text="检查车胎"
            android:textColor="@color/tab_main_text_default"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>


</LinearLayout>

