        <activity
            android:name="com.cdqf.cart_activity.ServiceActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!--店总-->
        <activity
            android:name="com.cdqf.cart_activity.ShopActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!--用户-->
        <activity
            android:name="com.cdqf.cart_activity.UserActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

